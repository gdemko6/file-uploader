<html lang="en">

    <body>
        <h2>Upload to Folder: <%= folderName %></h2>

        <!-- Upload form -->
        <form action="/upload" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="folderId" value="<%= folderId %>">
            <input type="file" name="file-upload" required>
            <button type="submit">Upload</button>
        </form>

        <% if (files.length > 0) { %>
            <h3>Current Files</h3>
            <ul>
                <% files.forEach(file => { %>
                    <li>
                        <a href="/folders/<%= folderId %>/<%= file.id %>"><%= file.filename %></a>
            
                        <!-- Download -->
                        <a href="/folders/<%= folderId %>/<%= file.id %>/download">üì• Download</a>
            
                        <!-- Delete -->
                        <form action="/folders/<%= folderId %>/<%= file.id %>?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('Delete this file?');">
                            <button type="submit">‚ùå Delete</button>
                        </form>
                    </li>
                <% }); %>
            </ul>
            
        <% } else { %>
            <p>No files in this folder yet.</p>
        <% } %>
    </body>

</html>