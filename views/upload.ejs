<html lang="en">

    <body>
        <h2>Upload to Folder: <%= folderName %></h2>

        <!-- Upload form -->
        <form action="/upload" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="folderId" value="<%= folderId %>">
            <input type="file" name="file-upload" required>
            <button type="submit">Upload</button>
        </form>

        <% if (files.length > 0) { %>
            <h3>Current Files</h3>
            <ul>
                <% files.forEach(file => { %>
                    <li>
                        <a href="/folders/<%= folderId %>/<%= file.id %>"><%= file.filename %></a>
            
                        <!-- Download -->
                        <a href="/folders/<%= folderId %>/<%= file.id %>/download">üì• Download</a>
            
                        <!-- Delete -->
                        <button onclick="deleteFile('<%= folderId %>', '<%= file.id %>')">‚ùå Delete</button>

                    </li>
                <% }); %>
            </ul>
            
        <% } else { %>
            <p>No files in this folder yet.</p>
        <% } %>
    </body>

    <script>
        async function deleteFile(folderId, fileId) {
            if (confirm("Are you sure you want to delete this file?")) {
                const res = await fetch(`/folders/${folderId}/${fileId}`, {
                    method: "DELETE"
                });
    
                if (res.ok) {
                    location.reload(); // Refresh to reflect deletion
                } else {
                    alert("Failed to delete file.");
                }
            }
        }
    </script>
    

</html>